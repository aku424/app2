<%= render 'layouts/sidebar', book: @book, user: @user %>
<div class='col-xs-9'>
<h1>Books</h1>
<table>
    <thead>
      <tr>
        <th colspan="1"></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>
    </thead>
    <% @books.each do |book|%>
      <tbody>
        <tr>
          <td><%= link_to user_path(book.user_id)do%>
            <%= attachment_image_tag book.user, :profile_image, size: "60x60", format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg" %></td>
            <% end %>
          <td><%= link_to book.title, book_path(book.id)%></td>
          <td><%=book.body%></td>
        </tr>
      </tbody>
    <% end %>
  </table>
</div>
