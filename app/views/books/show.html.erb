<%= render 'layouts/sidebar', book: @book, user: @book_show.user %>
<br>
<br>
<br>
<div class='col-xs-9'>
<h1>Book detail</h1>
<% if @book_show.user_id == current_user.id %>
　　<table>
	　　<thead>
	　　 	<tr>
			  <td colspan="1"></td>
		      <td>Title</td>
			  <th>Opinion</th>
			  <th colspan="2"></th>
		  </tr>
	  </thead>
	  <%=  %>
	  <tbody>
		  <tr>
			  <td><%= link_to user_path(@book_show.user_id)do%>
				  <%= attachment_image_tag @book_show.user , :profile_image, size: "60x60",format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %><br>
				  <%= @book_show.user.name %>
				  <% end %>
			  </td>
			  <td><%= @book_show.title %></td>
			  <td><%= @book_show.body %></td>
			  <td><%= link_to "Edit", edit_book_path(@book_show.id) %></td>
		  	  <td><%= link_to "Destroy", book_path(@book_show.id), method: :delete, data: {confirm: "削除しますか？"}  %></td>
		  </tr>
	  </tbody>
  </table>
<% else %>
  <table>
	  <thead>
		  <tr>
			  <td colspan="1"></td>
		      <td>Title</td>
			  <th>Opinion</th>
		  </tr>
	  </thead>
	  <tbody>
		  <tr>
			  <td><%= link_to user_path(@book_show.user_id)do%>
				  <%= attachment_image_tag @book_show.user , :profile_image, size: "60x60",format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %><br>
				  <%= @book_show.user.name %>
				  <% end %>
			  </td>
			  <td><%= @book_show.title %></td>
			  <td><%= @book_show.body %></td>
		  </tr>
	  </tbody>
  </table>
<% end %>
</div>