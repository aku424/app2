<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <br>
    <br>
  <div class="container">
    <div class="row">
    <header class="navbar navbar-fixed-top navbar-inverse ">
      <nav class='nav navbar-nav navbar-left' >
        <h1 class="header-title">Bookers</h1>
      </nav>
      <nav>
        <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%= link_to "Home", user_path(current_user.id), class: "nav-link glyphicon glyphicon-home" %></li>
          <li><%= link_to "Users", users_path, class: "nav-link glyphicon glyphicon-user" %></li>
          <li><%= link_to "Books", books_path, class: "nav-link glyphicon glyphicon-book" %></li>
          <li><%= link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-share" %></li>
        <% else%>
          <li><%= link_to "Home", "/", class: "nav-link glyphicon glyphicon-home" %></li>
          <li><%= link_to "About", home_about_path, class: "nav-link glyphicon glyphicon-link" %></li>
          <li><%= link_to "Sign up", new_user_registration_path, class: "nav-link glyphicon glyphicon-edit" %></li>
          <li><%= link_to "login", new_user_session_path, class: "nav-link glyphicon glyphicon-share" %></li>
        <% end %>
        </ul>
      </nav>
    </header>
  </div>
    <div class="row">
    <%= yield %>
    </div>
  </div>
  </body>
</html>
