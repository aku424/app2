<br>
<br>
<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% else %>
  <div class="flash">
    <%= flash[:alert] %>
  </div>
<% end %>

<div class="col-xs-3">
  <div class="prof">
    <br>
    <% if book.errors.any? %>
        <p><%= book.errors.count %>件のエラーが発生しました。</p>
        <%= book.errors.full_messages.each do |message|%>
          <% message %>
        <% end%>
      <% end %>

    <h2>User info</h2>
      <table>
          <tr>
            <%= attachment_image_tag user, :profile_image, size: "60x60", format: 'jpeg', class: " pull-left profile-img", fallback: "no_image.jpg" %><!---->
          </tr>
          <tr>
            <td>name</td>
            <td><%= user.name %></td><!--@user-->
          </tr>
          <tr>
            <td>introduction</td>
            <th><%=user.introduction%></th>
          </tr>
      </table>
    <% if user.id == current_user.id %>
      <%= link_to "Prof Edit", edit_user_path(current_user.id), class: "btn btn-default"%>
    <% else %>
      <%= link_to "Prof Edit", user_path(current_user.id), class: "btn btn-default"%>
    <% end %>
  </div>
  <div class="post-area">
    <h3>New book</h3>
    <%= form_for (book) do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %>
      <%= f.submit "Create Book" %>
    <% end %>
  </div>
</div>